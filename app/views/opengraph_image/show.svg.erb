<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="1200" height="630" fill="#0a0a0a">
  <!-- Background -->
  <path fill="#0a0a0a" d="M0 0h1350v675H0v0z"/>

  <!-- Title -->
  <% title_y = 0 %> <!-- Define outside the block -->
  <text fill="#fff" font-family="sans-serif" font-size="64" font-weight="600" letter-spacing="-3px">
    <% text_wrap(title, max_line_length: 40).each_with_index do |line, idx| %>
      <% title_y = 120 + (75 * idx) %>
      <tspan x="80" y="<%= title_y %>"><%= line %></tspan>
    <% end %>
  </text>

  <!-- Byline -->
  <text fill="#fff" font-family="sans-serif" font-size="48" font-weight="400" letter-spacing="-3px">
    <% text_wrap(byline, max_line_length: 50).each_with_index do |line, idx| %>
      <tspan x="80" y="<%= title_y + 80 + (58 * idx) %>"><%= line %></tspan>
    <% end %>
  </text>

  <!-- Avatar -->
  <svg x="950" y="400" xmlns="http://www.w3.org/2000/svg" width="200" height="200">
    <image href="<%= logo.to_base64 %>" width="200" height="200"/>
  </svg>
</svg>
